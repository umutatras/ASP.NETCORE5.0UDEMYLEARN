@model UserListModel

@{ 
    Layout = "/Views/Shared/_Layout.cshtml";
}

<div class="row mt-3">
    <div class="col-6">
        <p>
            Hesap ekleyen: @Model.Name
        </p>
        <p>
            Kullanıcının Soyadı: @Model.Surname
        </p>
        <p>
            Kullanıcının aktif hesap sayısı:<getAccountCount applicaton-user-id="@Model.Id"></getAccountCount>       </p>

    </div>
    <div class="col-6">
        <form method="post" asp-action="Create" asp-controller="Account">
            <input type="hidden" name="ApplicationUserId" value="@Model.Id" />
            <div class="mb-3">

                <input type="number" class="form-control" name="AccountNumber" />
            </div>
            <div class="mb-3">
                <input type="number" class="form-control" name="Balance" />
            </div>
            <div class="mb-3">
                <button class="btn btn-primary">Kaydet</button>
            </div>
        </form>

    </div>
</div>